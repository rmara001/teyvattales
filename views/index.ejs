<!-- HTML Document Structure -->
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Meta tags for character encoding and viewport settings -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Title of the webpage -->
    <title>Homepage</title>
    <!-- External CSS files -->
    <link rel="stylesheet" type="text/css" href="/main.css" />
    <link rel="icon" href="/assets/favicon.ico">
    <!-- External libraries for icons and fonts -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap">
    <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <!-- External JavaScript file -->
    <script src="script.js"></script>
</head>

<body>
    <!-- Header Section -->
    <div class="header">
        <!-- Forum title -->
        <div class="header-wrapper">
            <h1 class="forum-title"><%= forumName %></h1>
            <!-- Hamburger menu -->
            <div class="hamburger-menu" onclick="openNavigation()">
                <%- include('../includes/hamburger-svg') %>
            </div>
        </div>

        <!-- Navigation links -->
        <nav class="navigation">
            <div class="mobile-menu" id="menu-toggle">
                <a href="/">Home</a>
                <a href="/characters">Characters</a>
                <a href="/about">About</a>
                <a href="/posts">Forum</a>
                <a href="/createpost">Create Post</a>
                <a href="/contact">Contact Us</a>
                <%- include('../includes/navigation-svg') %>
            </div>

            <!-- Search bar -->
            <div class="search-container">
                <input class="character-search-input" id="searchInput" placeholder="Search Posts" type="text" value="">
                <button class="search-button"><i class="fas fa-search"></i></button>
            </div>
        </nav>

        <!-- Authentication links -->
        <div class="auth-links">
            <% if (userLoggedIn) { %>
            <!-- If user is logged in -->
            <span class="welcome-message">Welcome back, <%= username || '' %></span>
            <a href="/myaccount" class="account-link">
                <span class="desktop-text">My Account</span>
                <i class="mobile-icon fas fa-user-circle"></i>
            </a>
            <a href="/logout" class="logout-link" onclick="event.preventDefault(); showPopup('logoutPopup');">
                <span class="desktop-text">Logout</span>
                <i class="mobile-icon fas fa-sign-out-alt"></i>
            </a>
            <% } else { %>
            <!-- If user is not logged in -->
            <a href="/login" class="login-link">
                <span class="desktop-text">Login</span>
                <i class="mobile-icon fas fa-sign-in-alt"></i>
            </a>
            <a href="/register" class="register-link">
                <span class="desktop-text">Sign Up</span>
                <i class="mobile-icon fas fa-user-plus"></i>
            </a>
            <% } %>
        </div>

        <!-- Logout Confirmation Popup -->
        <div id="logoutPopup" class="message-popup" style="display: none;">
            <div class="popup-content">
                <span class="close-btn" onclick="closePopup('logoutPopup')">&times;</span>
                <p>Are you sure you want to logout?</p>
                <button onclick="confirmLogout()">Yes, logout</button>
                <button onclick="closePopup('logoutPopup')">Cancel</button>
            </div>
        </div>

    </div>

    <!-- Hero Banner Section -->
    <section class="hero-image">
        <div class="hero-wrapper">
            <!-- Main heading -->
            <h1>Welcome, fellow traveler!</h1>
            <!-- Subheading -->
            <p>Where Adventures Converge and Stories Unfold. Join our community for travelers, by travelers.</p>
        </div>
    </section>

    <!-- Main Content Section -->
    <div class="content">
        <h3>About</h3>
        <div class="content-wrapper">
            <!-- Description of the website -->
            <p>Our forum acts as a key gathering place for players of Genshin Impact. This a community where fans, experienced players, or newcomers come together to exchange insights, strategies, and tales from their journey.</p>
            <p>Whether you're seeking advice on team compositions or unraveling the lore, our forum is a friendly place for everyone. Discover more about Genshin by clicking below.</p>
            <!-- Link to learn more about the website -->
            <a href="about" class="center-link">Learn More</a>
            <!-- Image Carousel -->
            <div class="carousel">
                <div class="carousel-images">
                    <!-- Carousel images -->
                    <img src="/assets/hero1.webp" class="image active">
                    <img src="/assets/hero2.webp" class="image">
                    <img src="/assets/hero3.webp" class="image">
                    <img src="/assets/hero4.webp" class="image">
                    <img src="/assets/hero5.webp" class="image">
                    <img src="/assets/hero6.webp" class="image">
                    <img src="/assets/hero7.webp" class="image">
                    <img src="/assets/hero8.webp" class="image">
                </div>
                <!-- Carousel navigation buttons -->
                <div class="carousel-dots">
                </div>
                <button class="carousel-button prev">&#10094;</button>
                <button class="carousel-button next">&#10095;</button>
            </div>
        </div>
    </div>

    <!-- Footer Section -->
    <%- include('../includes/footer') %>
</body>

</html>